BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_updown(1)
            Button:
                text: 'Down'
                on_press: app.handle_updown(-1)


    Button:
        text: 'Convert m to km'
        font_size: 48
        on_press: app.handle_calculate()


    Label:
        id: output_label
        text: '54.7172'
        font_size: 48
        color: (1, 1, 0, 1)
